#!/bin/rc
#
mount -o remount,rw /

mkdir /dev/pts
mkdir /dev/shm

mount -a

mdevd-coldplug
mdevd &

hostname `{cat /etc/hostname}
ip link set lo up
dmesg >/var/log/dmesg.log

/etc/rc.local

aliases=`{find /sys -type f -name 'modalias' -exec cat '{}' + | sort -u}
modprobe -aq $aliases `{cat /etc/modules}

exec perpboot /etc/perp
