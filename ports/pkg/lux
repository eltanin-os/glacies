[vars]
name=lux
version=2.1
license=UNLICENSE
description=A simple package manager.

[patches]
lux-set_repository.patch

[mirrors]
git://github.com/eltanin-os/lux.git

[mdeps]
libc
libressl
libz

[build]
CPPFLAGS=($CPPFLAGS -DWITH_SSL)
portsys_mk_meth make replace
portsys_mk_exec

[install]
portsys_mk_exec install
portsys_mk_exec install-man
