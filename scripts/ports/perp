[vars]
name=perp
version=2.07
license=CUSTOM
description=A persistent process supervisor and service managment framework for un*x.

[mirrors]
git://github.com/eadwardus/perp

[mdeps]
libc

[build]
cat <<-EOF > conf.mk
CC=$CC
CFLAGS=$CFLAGS $CPPFLAGS
LDFLAGS=$LDFLAGS
STRIP=$STRIP
BINDIR=$BINDIR
SBINDIR=$BINDIR
MANDIR=$MANDIR
EOF
make

[install]
make DESTDIR=$DESTDIR install
