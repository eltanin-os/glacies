#!/bin/rc

mount -t devtmpfs dev /dev -o nosuid,mode=755

mkdir /dev/pts
mkdir /dev/shm

mount -t proc none /proc

smdev -s
printf "/bin/smdev\n" > /proc/sys/kernel/hotplugdone

mount -o remount,rw /
mount -a

hostname `{cat /etc/hostname}
ip link set lo up
dmesg >/var/log/dmesg.log

/etc/rc.local

exec perpboot /etc/perp
