#!/bin/execlineb -S3
# $1=name $2=uid $3=password $4=groups
# add user info
if { setup-util-pwadd /mnt/etc/passwd "${1}:x:${2}:${2}::/home/${1}:/bin/sh" }
# add group info
if { setup-util-pwadd /mnt/etc/group "${1}:x:${2}:" }
if {
	# populate groups
	setup-util-iawk -vuser="${1}" -vgroups="${4}" "
BEGIN {
	split(groups, arr, ",")
	FS=OFS=":"
}
{
	for(i=1; i<=length(arr); i++) {
		if($1 == arr[i]) {
			if($4 == "")
				$4=user
			else
				$4=$4","user
		}
	}
	print
}
"
}
if { setup-password $1 $3 }
if { mkdir /mnt/home/${1} }
chown ${1}:${1} /mnt/home/${1}
